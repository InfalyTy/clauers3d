  <script>
    document.getElementById('reservaForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const formData = new FormData(e.target);
      let dades = '';
      for (const [clau, valor] of formData.entries()) {
        dades += `${clau}: ${valor}\n`;
      }
      alert('Has enviat la següent informació:\n' + dades);
      document.getElementById('missatgeFinal').style.display = 'block';
      e.target.reset();
    });
  </script>
